<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/bg_common_background"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/main1"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout01"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/backbutton"
            android:layout_width="35dp"
            android:layout_height="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_arrow_back_"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Profile"
            android:textSize="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="75dp"
            android:fontFamily="@font/century_gothic"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/white"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout01"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/image_frame"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/change_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp"
            android:background="@drawable/ic_edit_profile" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="15dp"
            android:background="#044275" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout02"
        android:layout_marginTop="-1dp">

        <TextView
            android:id="@+id/heading01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:fontFamily="@font/century_gothic"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading01"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Android Studio"
            android:fontFamily="@font/century_gothic"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
        android:id="@+id/heading02"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        android:text="Email"
        android:fontFamily="@font/century_gothic"
        android:textSize="15dp"
        android:textColor="@color/white"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading02"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="name@example.com"
            android:fontFamily="@font/century_gothic"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/heading03"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="Password"
            android:fontFamily="@font/century_gothic"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heading03"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="example123"
            android:fontFamily="@font/century_gothic"
            android:textSize="17dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:textColor="@color/white"/>


    </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_b1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/backbutton2"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_arrow_back_"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/heading01b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/name2"
            android:layout_below="@+id/heading01b"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/century_gothic"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/save_name"
            android:layout_below="@+id/name2"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="SAVE"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/century_gothic"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@color/white"
            />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_c1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/backbutton3"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_arrow_back_"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/heading01c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/email2"
            android:layout_below="@+id/heading01c"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/century_gothic"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/save_email"
            android:layout_below="@+id/email2"
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="SAVE"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/century_gothic"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@color/white"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main4"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layout_d1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/backbutton4"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_arrow_back_"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/heading01d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter a new password"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/white"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/password2"
            android:layout_below="@+id/heading01d"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/et_bg"
            android:fontFamily="@font/century_gothic"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/password_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password2"
            android:text="Secure passwords are at least 8 characters long and include numbers and symbols"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/century_gothic"
            android:textColor="@color/white"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/update_password"
            android:layout_below="@+id/password_description"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="UPDATE PASSWORD"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/century_gothic"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@color/white"
            />
    </RelativeLayout>

</RelativeLayout>